<h4>Edit <%= @stylist.name() %>'s Client, <%= @client.name() %>...</h4>
<form action='/stylists/<%= @stylist.id() %>/clients/<%= @client.id() %>' method='post'>
  <input name='_method' type='hidden' value='patch'>

  <label for='name'>Enter a New Name:</label>
  <input id='name' name='name' type='text'>
  <button type='submit'>Edit Client</button>
</form>

<form action='/stylists/<%= @stylist.id() %>/clients/<%= @client.id() %>' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <button type='submit'>Delete Client</button>
</form>

<a href='/stylists'>View Stylists</a>
